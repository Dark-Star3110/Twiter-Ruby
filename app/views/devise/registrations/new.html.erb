<br>
<center>
  <div class="card border-success mb-3" style="max-width: 18rem;">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <div class="card-header bg-transparent border-success"><b>サインアップ</b></div>
      <div class="card-body text-success">
        <div class="form-group">
          <%= f.email_field :email, autofocus: true, class:"form-control",  autocomplete: "email", placeholder:"Enter Email" %>
        </div>
         <div class="form-group">
          <%= f.text_field :name, autofocus: true, class:"form-control",  autocomplete: "name", placeholder:"name" %>
        </div>
        <div class="form-group">
          <%= f.number_field :age, autofocus: true, class:"form-control",  autocomplete: "age", placeholder:"age" %>
        </div>
        <div class="form-group">
    <%= f.label :avatar %>  </div>
   <div class="input-group mb-3">
  </div>
  <div class="custom-file">
    
    <%= f.file_field :avatar, class:"custom-file-input", required:"true", accept:"image/*",oninput: "filename()" %>

    <label class="custom-file-label"></label>
  </div>
  
</div>
        <div class="form-group">
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password",  class:"form-control", placeholder:"Enter Password" %>
        </div>
        <div class="form-group">
          <%= f.password_field :password_confirmation,  class:"form-control", autocomplete: "new-password", placeholder:"Confirm password" %>
        </div>
      </div>
      <div class="card-footer bg-transparent border-success">
        <center>
          <%= f.submit "サインアップ", class:"btn btn-success" %>
        </center>
        <center>
          Already An User ?
          <%= render "devise/shared/links" %>
        </center>
      </div>
    <% end %>
  </div>
</center>